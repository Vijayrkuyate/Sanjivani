@model IEnumerable<SanjivaniModalView.ProductBusinessModal>
<div class="modal fade" id="modal-default">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Customerwise Set Prise</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6">
                        <input type="hidden" id="ProductId2" name="rank" />
                        <label for="exampleInputFile">Set Margin</label>

                        <input type="text" name="postedFile" class="form-control" id="fileuploaded" />
                    </div>
                    </div>
                </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="setprice" class="btn btn-primary" data-dismiss="modal">Save changes</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<table id="example1" class="table table-bordered table-striped">
    <thead>
        <tr style="color: white;background-color: #030358;">

            <th style="width: 20px;">Image</th>
            <th>Product Code</th>
            <th>Product Name</th>

            <th>Cost Prise</th>
            <th>Selling Prise</th>
            <th>Operation</th>
           
            
        </tr>
    </thead>
    <tbody>
        @{ int rowNo = 0; }
        @foreach (var item in Model)
        {
            <tr style="background-color:white">
                @*<td>@item.RegistrationDate</td>*@
                <td>
                    <div class="pull-left image">
                        <img src="~/Documents/ProductImage/@item.PropductImage" class="img-circle" alt="User Image" style="height: 47px;">
                    </div>
                </td>
                <td>@item.ProductCode</td>

                <td>@item.ProductName</td>
                <td>@item.CostPrice</td>
                <td>@item.SellingPrice</td>
                <td align="center">
                    <input type="hidden" id="ProductId1" name="rank" value=@item.ProductId />
                    <a class="btn btn-sm view" id="view" title="Edit" data-toggle="modal" data-target="#modal-default">
                        <img src="~/Content/edit.gif" />
                    </a>
                </td>
               
            </tr>
        }





    </tbody>
    <tfoot>
        <tr></tr>
    </tfoot>
</table>